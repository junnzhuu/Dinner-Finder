<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="50dp"
    tools:context=".ViewController.Fragment.PieChartFragment"
    android:orientation="vertical">

    <com.github.mikephil.charting.charts.PieChart
        android:id="@+id/pieChart"
        android:layout_width="match_parent"
        android:layout_height="400dp"/>

    <TextView
        android:id="@+id/instruction_pieChart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/label_instruction"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/instruction_pieChart2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/description_pie_chart"
        android:textSize="16sp"
        android:layout_marginTop="5dp"/>

</LinearLayout>
