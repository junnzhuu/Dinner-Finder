<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="50dp"
    tools:context=".ViewController.Fragment.RadarChartFragment"
    android:orientation="vertical">

    <com.github.mikephil.charting.charts.RadarChart
        android:id="@+id/radarChart"
        android:layout_width="match_parent"
        android:layout_height="400dp"/>

    <TextView
        android:id="@+id/instruction_radarChart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Instruction:"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/instruction_radarChart2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="This radar chart illustrates the relationship between restaurant ratings and the number of restaurants, showing the number of restaurants in each rating range (0-1, 1-2...4-5)."
        android:textSize="16sp"
        android:layout_marginTop="5dp"/>

</LinearLayout>