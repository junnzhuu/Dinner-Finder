<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- When button is pressed -->
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#CCCCCC"/> <!-- Light grey color when pressed -->
            <corners android:radius="12dp"/> <!-- Rounded corners -->
            <stroke android:width="2dp" android:color="#000000"/> <!-- Black border -->
        </shape>
    </item>
    <!-- Default state -->
    <item>
        <shape>
            <solid android:color="#F5F5F5"/> <!-- White background color -->
            <corners android:radius="12dp"/> <!-- Rounded corners -->
            <stroke android:width="1dp" android:color="#000000"/> <!-- Black border -->
        </shape>
    </item>
</selector>
